/* =========================================
   SHOPIFY THEME SETTINGS VARIABLES
   These pull from Theme Customizer
   ========================================= */
:root {
    /* Colors from Theme Settings */
    --color-background: {{ settings.color_background | default: '#FDFBF7' }};
    --color-text: {{ settings.color_text | default: '#2C2623' }};
    --color-accent: {{ settings.color_accent | default: '#D35E35' }};
    --color-secondary: {{ settings.color_secondary | default: '#8F9E82' }};
    --color-sand: {{ settings.color_sand | default: '#EBE5DE' }};
    
    /* Typography from Theme Settings */
    --font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
    --font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
    --font-size-base: {{ settings.font_size_base | default: 16 }}px;
    
    /* Layout */
    --page-width: {{ settings.page_width | default: 1400 }}px;
    
    /* Derived Colors */
    --c-cream: var(--color-background);
    --c-text: var(--color-text);
    --c-terracotta: var(--color-accent);
    --c-sage: var(--color-secondary);
    --c-sand: var(--color-sand);
    --c-yellow: #F2C94C;
    --c-white: #FFFFFF;
    
    /* Font Aliases */
    --f-serif: var(--font-heading);
    --f-sans: var(--font-body);
    
    /* Spacing & Radii */
    --space-xs: 0.5rem;
    --space-sm: 1rem;
    --space-md: 2rem;
    --space-lg: 4rem;
    --space-xl: 8rem;
    --radius-sm: 8px;
    --radius-lg: 24px;
    --card-shadow: 0 10px 30px rgba(44, 38, 35, 0.05);
}

