/* =========================================
   PREMIUM LUXURY STYLES (V3)
   Palette: Olive #263112 | Terracotta #884F4F
   ========================================= */

:root {
  /* Core Colors */
  --c-bg: {{ settings.color_background | default: '#FDFBF7' }};
  --c-text: {{ settings.color_text | default: '#263112' }};
  --c-accent: {{ settings.color_accent | default: '#884F4F' }};
  --c-taupe: {{ settings.color_secondary | default: '#866B67' }};
  
  /* UI Elements */
  --btn-bg: {{ settings.btn_bg | default: '#263112' }};
  --btn-text: {{ settings.btn_text | default: '#FFFFFF' }};
  
  /* Mobile Specific */
  --mobile-bg: {{ settings.mobile_menu_bg | default: '#FDFBF7' }};
  --mobile-text: {{ settings.mobile_menu_text | default: '#263112' }};

  /* Typography */
  --font-heading: {{ settings.font_heading.family }}, Serif;
  --font-body: {{ settings.font_body.family }}, Sans-Serif;
}

body {
  background-color: var(--c-bg);
  color: var(--c-text);
  font-family: var(--font-body);
  line-height: 1.6;
  overflow-x: hidden; /* Prevent horizontal scroll */
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-heading);
  color: var(--c-text);
  font-weight: 400; /* Luxury often uses lighter weights */
  letter-spacing: -0.02em;
}

/* --- PREMIUM ANIMATIONS --- */
{% if settings.enable_animations %}
.reveal-on-scroll {
  opacity: 0;
  transform: translateY(30px);
  transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
}
.reveal-on-scroll.is-visible {
  opacity: 1;
  transform: translateY(0);
}
{% endif %}

/* --- BUTTONS --- */
.btn-primary {
  background-color: var(--btn-bg);
  color: var(--btn-text);
  padding: 1rem 2.5rem;
  border-radius: 50px;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 0.8rem;
  font-weight: 600;
  border: 1px solid var(--btn-bg);
  transition: all 0.3s ease;
  display: inline-flex; align-items: center; justify-content: center;
}
.btn-primary:hover {
  background-color: transparent;
  color: var(--btn-bg);
  transform: translateY(-2px);
}

/* --- MOBILE VISIBILITY FIXES --- */
.mobile-menu-drawer {
  background-color: var(--mobile-bg) !important;
  color: var(--mobile-text) !important;
}
.mobile-nav-toggle {
  color: var(--c-text) !important;
}
.mobile-links a {
  color: var(--mobile-text) !important;
}

/* --- BIG & BROAD LAYOUT --- */
.container {
  max-width: 1440px; /* Wider canvas */
  margin: 0 auto;
  padding: 0 5%;
}

.section {
  padding: 6rem 0; /* More breathing room */
}
