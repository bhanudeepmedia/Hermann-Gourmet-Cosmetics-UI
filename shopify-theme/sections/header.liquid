<header class="site-header" data-sticky="{{ section.settings.sticky }}">
    <div class="container header-wrapper">
      
      <!-- Mobile Toggle -->
      <button class="mobile-nav-toggle" id="mobile-menu-toggle" aria-label="Menu">
        <i class="fa-solid fa-bars"></i>
      </button>
  
      <!-- Logo center logic -->
      <div class="header-logo">
        <a href="{{ routes.root_url }}">
          {% if section.settings.logo %}
            <img src="{{ section.settings.logo | img_url: '400x' }}" alt="{{ shop.name }}" loading="eager">
          {% else %}
            <span class="logo-text">{{ section.settings.logo_text }}</span>
          {% endif %}
        </a>
      </div>
  
      <!-- Desktop Nav with Smart Icons -->
      <nav class="header-nav">
        <ul class="nav-list">
          {% for link in linklists[section.settings.main_menu].links %}
            {% assign icon_class = "" %}
            {% assign link_handle = link.title | downcase %}
            
            {% comment %} Smart Icon Mapping {% endcomment %}
            {% if link_handle contains 'shop' %}{% assign icon_class = "fa-solid fa-shop" %}
            {% elsif link_handle contains 'face' %}{% assign icon_class = "fa-regular fa-face-smile" %}
            {% elsif link_handle contains 'body' %}{% assign icon_class = "fa-solid fa-hands-bubbles" %}
            {% elsif link_handle contains 'soap' %}{% assign icon_class = "fa-solid fa-soap" %}
            {% elsif link_handle contains 'candle' %}{% assign icon_class = "fa-solid fa-fire" %}
            {% elsif link_handle contains 'gift' %}{% assign icon_class = "fa-solid fa-gift" %}
            {% elsif link_handle contains 'story' %}{% assign icon_class = "fa-solid fa-book-open" %}
            {% elsif link_handle contains 'contact' %}{% assign icon_class = "fa-solid fa-envelope" %}
            {% endif %}

            <li class="nav-item {% if link.links != blank %}has-dropdown{% endif %}">
              <a href="{{ link.url }}" class="nav-link {% if link.active %}active{% endif %}">
                {% if icon_class != "" %}<i class="{{ icon_class }}" style="margin-right: 5px; opacity: 0.7;"></i>{% endif %}
                {{ link.title }}
                {% if link.links != blank %}<i class="fa-solid fa-chevron-down down-arrow"></i>{% endif %}
              </a>
  
              {% if link.links != blank %}
                <div class="mega-menu-container">
                  <div class="container mega-menu-grid">
                    {% for childlink in link.links %}
                      <div class="mega-menu-column">
                        <h4><a href="{{ childlink.url }}">{{ childlink.title }}</a></h4>
                        <ul>
                          {% for grandchild in childlink.links %}
                            <li><a href="{{ grandchild.url }}">{{ grandchild.title }}</a></li>
                          {% endfor %}
                        </ul>
                      </div>
                    {% endfor %}
                    
                    <!-- Promo Blocks -->
                    {% for block in section.blocks %}
                      {% if block.type == 'promo' and block.settings.menu_trigger == link.title %}
                         <div class="mega-menu-column promo-column">
                           <div class="promo-card">
                             {% if block.settings.image %}
                               <img src="{{ block.settings.image | img_url: '400x' }}" alt="Promo">
                             {% endif %}
                             <h5>{{ block.settings.title }}</h5>
                             <a href="{{ block.settings.link }}" class="btn-text">Shop Now â†’</a>
                           </div>
                         </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </nav>
  
      <!-- Action Bar (Search, Account, Cart) -->
      <div class="header-icons">
        <div class="search-wrapper">
           <form action="{{ routes.search_url }}" method="get" class="header-search-form">
             <input type="text" name="q" placeholder="Search..." class="header-search-input">
             <button type="submit" class="header-icon-btn"><i class="fa-solid fa-magnifying-glass"></i></button>
           </form>
        </div>

        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="header-icon-btn" aria-label="Account">
              <i class="fa-regular fa-user"></i>
          </a>
        {% endif %}
        
        <a href="{{ routes.cart_url }}" class="header-icon-btn cart-link" aria-label="Cart">
          <i class="fa-solid fa-basket-shopping"></i>
          <span class="cart-count-badge">{{ cart.item_count }}</span>
        </a>
      </div>
    </div>
</header>
  
<style>
    /* Styling adjustments for the new optimized header */
    .site-header { padding: 0.8rem 0; background: white; border-bottom: 1px solid #f0f0f0; position: relative; z-index: 50; transition: all 0.3s; }
    .site-header[data-sticky="true"] { position: sticky; top: 0; }
    
    .header-wrapper { display: flex; justify-content: space-between; align-items: center; }
    
    .nav-list { display: flex; gap: 2rem; list-style: none; margin: 0; padding: 0; }
    .nav-link { font-size: 0.85rem; font-weight: 600; text-transform: uppercase; color: var(--c-text); display: flex; align-items: center; padding: 1rem 0; }
    .nav-link:hover { color: var(--c-accent); }
    
    /* Search Bar */
    .search-wrapper { position: relative; margin-right: 1rem; }
    .header-search-form { display: flex; align-items: center; background: #f9f9f9; border-radius: 30px; padding: 5px 15px; border: 1px solid transparent; transition: border 0.3s; }
    .header-search-form:focus-within { border-color: var(--c-accent); background: white; }
    .header-search-input { border: none; background: transparent; outline: none; font-size: 0.9rem; width: 150px; }
    
    .header-icon-btn { font-size: 1.2rem; color: var(--c-text); margin-left: 1rem; position: relative; transition: transform 0.2s; background: none; border: none; cursor: pointer; }
    .header-icon-btn:hover { color: var(--c-accent); transform: translateY(-2px); }
    
    .cart-count-badge {
        position: absolute; top: -8px; right: -8px;
        background: var(--c-accent); color: white;
        font-size: 0.7rem; width: 18px; height: 18px;
        border-radius: 50%; display: flex; justify-content: center; align-items: center;
    }

    /* Mega Menu */
    .mega-menu-container { position: absolute; top: 100%; left: 0; width: 100%; background: white; padding: 3rem 0; opacity: 0; visibility: hidden; transform: translateY(10px); transition: all 0.2s; border-top: 1px solid #eee; box-shadow: 0 10px 20px rgba(0,0,0,0.05); }
    .nav-item:hover .mega-menu-container { opacity: 1; visibility: visible; transform: translateY(0); }
    .mega-menu-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 2rem; }
    .mega-menu-column h4 a { font-weight: 700; color: var(--c-accent); text-transform: uppercase; font-size: 0.9rem; margin-bottom: 1rem; display: block; }
    .mega-menu-column ul { list-style: none; padding: 0; }
    .mega-menu-column li { margin-bottom: 0.5rem; }
    .mega-menu-column a { color: #555; font-size: 0.9rem; transition: padding 0.2s; }
    .mega-menu-column a:hover { color: black; padding-left: 5px; }

    @media (max-width: 1024px) {
        .header-nav { display: none; }
        .mobile-nav-toggle { display: block; font-size: 1.5rem; background: none; border: none; }
    }
    @media (min-width: 1025px) {
        .mobile-nav-toggle { display: none; }
    }
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Name",
      "default": "Hermann"
    },
    {
       "type": "link_list",
       "id": "main_menu",
       "label": "Menu",
       "default": "main-menu"
    },
    {
       "type": "checkbox",
       "id": "sticky",
       "label": "Sticky Header",
       "default": true
    }
  ],
  "blocks": [
    {
        "type": "promo",
        "name": "Menu Promo",
        "settings": [
            { "type": "text", "id": "menu_trigger", "label": "Menu Title Match" },
            { "type": "image_picker", "id": "image", "label": "Image" },
            { "type": "text", "id": "title", "label": "Title" },
            { "type": "url", "id": "link", "label": "Link" }
        ]
    }
  ]
}
{% endschema %}
