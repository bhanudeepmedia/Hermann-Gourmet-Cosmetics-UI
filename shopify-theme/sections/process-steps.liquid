<div class="process-section">
  <div class="container">
    <div class="section-header-center">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>

    <div class="process-grid">
      {% for block in section.blocks %}
        <div class="process-step">
          <div class="step-icon">{{ block.settings.emoji }}</div>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .process-section {
    padding: 6rem 5%;
    background: linear-gradient(180deg, #FDFBF7 0%, #F9F3EA 100%);
  }
  .section-header-center {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 4rem;
  }
  .section-header-center h2 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  .section-header-center p {
    font-size: 1.2rem;
    color: #666;
  }
  .process-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    max-width: var(--page-width);
    margin: 0 auto;
  }
  .process-step {
    text-align: center;
    padding: 2rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    transition: transform 0.3s;
  }
  .process-step:hover {
    transform: translateY(-10px);
  }
  .step-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
  }
  .process-step h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }
  .process-step p {
    color: #666;
    line-height: 1.6;
  }
</style>

