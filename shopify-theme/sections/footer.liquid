<footer class="footer-joy">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <h2>{{ section.settings.brand_name }}</h2>
        <p>{{ section.settings.tagline }}</p>
        <div class="socials">
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" target="_blank"><i class="fa-brands fa-instagram"></i></a>
          {% endif %}
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" target="_blank"><i class="fa-brands fa-facebook"></i></a>
          {% endif %}
          {% if section.settings.tiktok_url != blank %}
            <a href="{{ section.settings.tiktok_url }}" target="_blank"><i class="fa-brands fa-tiktok"></i></a>
          {% endif %}
        </div>
      </div>
      
      {% for block in section.blocks %}
        {% if block.type == 'link_list' %}
          <div class="footer-links">
            <h4>{{ block.settings.heading }}</h4>
            {% for link in linklists[block.settings.menu].links %}
              <a href="{{ link.url }}">{{ link.title }}</a>
            {% endfor %}
          </div>
        {% endif %}
      {% endfor %}
      
      <div class="footer-newsletter">
        <h4>{{ section.settings.newsletter_heading }}</h4>
        <p>{{ section.settings.newsletter_text }}</p>
        {% form 'customer', class: 'input-group' %}
          <input type="email" name="contact[email]" placeholder="{{ section.settings.email_placeholder }}">
          <button type="submit">{{ section.settings.button_text }}</button>
        {% endform %}
      </div>
    </div>
    <div class="footer-bottom">
      {{ section.settings.copyright_text }}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "Hermann."
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "Artisanal skincare cooked with ❤️ in Cyprus."
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter Heading",
      "default": "Join the Family"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Get 10% off your first freshly cooked order."
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email Placeholder",
      "default": "Your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Join"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "© 2024 Hermann Gourmet Cosmetics. Made with joy."
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ]
}
{% endschema %}
