[
    {
        "name": "theme_info",
        "theme_name": "Hermann Premium",
        "theme_author": "Antigravity",
        "theme_version": "2.0.0",
        "theme_documentation_url": "https://help.shopify.com/manual/using-themes"
    },
    {
        "name": "Colors",
        "settings": [
            {
                "type": "header",
                "content": "General"
            },
            {
                "type": "color",
                "id": "color_background",
                "label": "Background",
                "default": "#FDFBF7"
            },
            {
                "type": "color_background",
                "id": "color_background_gradient",
                "label": "Background Gradient (Optional)"
            },
            {
                "type": "color",
                "id": "color_text",
                "label": "Text",
                "default": "#2C1810"
            },
            {
                "type": "color",
                "id": "color_accent",
                "label": "Accent / Links",
                "default": "#D35E35"
            },
            {
                "type": "color",
                "id": "color_secondary",
                "label": "Secondary / Sage",
                "default": "#8B9D83"
            },
            {
                "type": "color",
                "id": "color_sand",
                "label": "Neutral / Sand",
                "default": "#E8DCC4"
            },
            {
                "type": "header",
                "content": "Primary Button"
            },
            {
                "type": "color",
                "id": "btn_primary_bg",
                "label": "Button Background",
                "default": "#D35E35"
            },
            {
                "type": "color",
                "id": "btn_primary_text",
                "label": "Button Text",
                "default": "#FFFFFF"
            },
            {
                "type": "header",
                "content": "Secondary Button"
            },
            {
                "type": "color",
                "id": "btn_secondary_border",
                "label": "Button Border/Text",
                "default": "#2C1810"
            },
            {
                "type": "header",
                "content": "Footer"
            },
            {
                "type": "color",
                "id": "footer_bg",
                "label": "Footer Background",
                "default": "#2C1810"
            },
            {
                "type": "color",
                "id": "footer_text",
                "label": "Footer Text",
                "default": "#FFFFFF"
            }
        ]
    },
    {
        "name": "Typography",
        "settings": [
            {
                "type": "font_picker",
                "id": "font_heading",
                "label": "Heading Font",
                "default": "serif"
            },
            {
                "type": "font_picker",
                "id": "font_body",
                "label": "Body Font",
                "default": "sans-serif"
            },
            {
                "type": "range",
                "id": "font_scale",
                "min": 100,
                "max": 150,
                "step": 5,
                "unit": "%",
                "label": "Font Scale",
                "default": 100
            }
        ]
    },
    {
        "name": "Layout",
        "settings": [
            {
                "type": "range",
                "id": "page_width",
                "min": 1000,
                "max": 1600,
                "step": 100,
                "unit": "px",
                "label": "Page Width",
                "default": 1400
            },
            {
                "type": "checkbox",
                "id": "enable_sticky_header",
                "label": "Enable Sticky Header",
                "default": true
            }
        ]
    },
    {
        "name": "Product Cards",
        "settings": [
            {
                "type": "checkbox",
                "id": "card_show_atc",
                "label": "Show Add to Cart Button",
                "default": true
            }
        ]
    }
]