<article class="article-page">
  <header class="article-header">
    {% if article.image %}
      <div class="article-hero-image">
        <img src="{{ article.image | img_url: '1400x' }}" alt="{{ article.title }}">
      </div>
    {% endif %}
    
    <div class="article-header-content">
      {% if article.tags.size > 0 %}
        <span class="category">{{ article.tags.first }}</span>
      {% endif %}
      <h1>{{ article.title }}</h1>
      <div class="article-meta">
        <span>By {{ article.author }}</span>
        <span>•</span>
        <span>{{ article.published_at | date: '%B %d, %Y' }}</span>
        <span>•</span>
        <span>{{ article.content | strip_html | split: ' ' | size | divided_by: 200 }} min read</span>
      </div>
    </div>
  </header>

  <div class="article-content">
    {{ article.content }}
  </div>

  <!-- Social Share -->
  <div class="article-share">
    <h4>Share this article</h4>
    <div class="share-buttons">
      <a href="https://www.facebook.com/sharer/sharer.php?u={{ article.url | url_encode }}" target="_blank" class="share-btn">
        <i class="fa-brands fa-facebook"></i>
      </a>
      <a href="https://twitter.com/intent/tweet?url={{ article.url | url_encode }}&text={{ article.title | url_encode }}" target="_blank" class="share-btn">
        <i class="fa-brands fa-twitter"></i>
      </a>
      <a href="https://pinterest.com/pin/create/button/?url={{ article.url | url_encode }}&media={{ article.image | img_url: '1000x' }}&description={{ article.title | url_encode }}" target="_blank" class="share-btn">
        <i class="fa-brands fa-pinterest"></i>
      </a>
    </div>
  </div>

  <!-- Related Articles -->
  {% if blog.articles.size > 1 %}
    <div class="related-articles">
      <h2>More from Our Journal</h2>
      <div class="articles-grid">
        {% for related_article in blog.articles limit: 3 %}
          {% unless related_article.id == article.id %}
            <article class="article-card">
              <a href="{{ related_article.url }}" class="article-image">
                {% if related_article.image %}
                  <img src="{{ related_article.image | img_url: '500x' }}" alt="{{ related_article.title }}">
                {% else %}
                  {{ 'lifestyle-1' | placeholder_svg_tag }}
                {% endif %}
              </a>
              <div class="article-content">
                <h3><a href="{{ related_article.url }}">{{ related_article.title }}</a></h3>
                <p>{{ related_article.excerpt_or_content | strip_html | truncate: 100 }}</p>
              </div>
            </article>
          {% endunless %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</article>

<style>
  .article-hero-image {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
    border-radius: 16px;
    margin-bottom: 2rem;
  }
  .article-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .article-header-content {
    max-width: 800px;
    margin: 0 auto 3rem;
    text-align: center;
    padding: 0 5%;
  }
  .article-header-content h1 {
    font-size: 3rem;
    margin: 1rem 0;
  }
  .article-meta {
    color: #999;
    font-size: 0.95rem;
  }
  .article-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 5%;
    font-size: 1.1rem;
    line-height: 1.8;
  }
  .article-content p {
    margin-bottom: 1.5rem;
  }
  .article-content h2 {
    margin: 2.5rem 0 1rem;
    font-size: 2rem;
  }
  .article-content h3 {
    margin: 2rem 0 1rem;
    font-size: 1.5rem;
  }
  .article-content img {
    width: 100%;
    border-radius: 12px;
    margin: 2rem 0;
  }
  .article-share {
    max-width: 800px;
    margin: 3rem auto;
    padding: 2rem 5%;
    text-align: center;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
  }
  .share-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 1rem;
  }
  .share-btn {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--orange);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    transition: transform 0.2s;
  }
  .share-btn:hover {
    transform: scale(1.1);
  }
  .related-articles {
    max-width: var(--page-width);
    margin: 4rem auto;
    padding: 0 5%;
  }
  .related-articles h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
</style>
