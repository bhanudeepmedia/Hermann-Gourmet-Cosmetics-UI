{% section 'header' %}

<div class="page-width container" style="margin: 4rem auto;">
  <header class="section-header text-center" style="margin-bottom: 4rem; text-align: center;">
    <h1 style="font-size: 3rem; margin-bottom: 1rem;">Collections</h1>
    <p style="opacity: 0.7;">Explore our range of cooked skincare.</p>
  </header>

  <div class="collections-grid-wrapper" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 2rem;">
    {% for collection in collections %}
      {% unless collection.handle == 'frontpage' %}
        <a href="{{ collection.url }}" class="collection-card reveal-on-scroll">
          <div class="collection-image" style="height: 400px; position: relative; overflow: hidden; border-radius: 8px;">
            {% if collection.image %}
              <img src="{{ collection.image | img_url: '600x' }}" alt="{{ collection.title }}" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.6s ease;">
            {% elsif collection.products.first.featured_image %}
              <img src="{{ collection.products.first.featured_image | img_url: '600x' }}" alt="{{ collection.title }}" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.6s ease;">
            {% else %}
              <div style="background: #eee; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">{{ collection.title }}</div>
            {% endif %}
            
            <div class="collection-overlay" style="position: absolute; bottom: 0; left: 0; width: 100%; padding: 2rem; background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);">
               <h3 style="color: white; margin: 0; font-size: 1.5rem;">{{ collection.title }}</h3>
               <span style="color: rgba(255,255,255,0.8); font-size: 0.9rem;">{{ collection.products_count }} Products â†’</span>
            </div>
          </div>
        </a>
      {% endunless %}
    {% endfor %}
  </div>
</div>

<style>
.collection-card:hover img { transform: scale(1.05); }
.reveal-on-scroll { opacity: 0; animation: fadeUp 0.8s forwards; }
@keyframes fadeUp { to { opacity: 1; transform: translateY(0); } from { opacity: 0; transform: translateY(20px); } }
</style>

