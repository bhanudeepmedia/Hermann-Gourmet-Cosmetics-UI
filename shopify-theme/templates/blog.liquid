<div class="blog-page">
  <div class="blog-header">
    <h1>{{ blog.title }}</h1>
    {% if blog.metafields.custom.description %}
      <p>{{ blog.metafields.custom.description }}</p>
    {% endif %}
  </div>

  <!-- Featured Article -->
  {% if blog.articles.first %}
    <div class="featured-article">
      <a href="{{ blog.articles.first.url }}" class="featured-image">
        {% if blog.articles.first.image %}
          <img src="{{ blog.articles.first.image | img_url: '1200x' }}" alt="{{ blog.articles.first.title }}">
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag }}
        {% endif %}
      </a>
      <div class="featured-content">
        <span class="category">Featured</span>
        <h2><a href="{{ blog.articles.first.url }}">{{ blog.articles.first.title }}</a></h2>
        <p>{{ blog.articles.first.excerpt_or_content | strip_html | truncate: 200 }}</p>
        <div class="article-meta">
          <span>{{ blog.articles.first.published_at | date: '%B %d, %Y' }}</span>
          <span>â€¢</span>
          <span>{{ blog.articles.first.content | strip_html | split: ' ' | size | divided_by: 200 }} min read</span>
        </div>
      </div>
    </div>
  {% endif %}

  <!-- Articles Grid -->
  <div class="articles-grid">
    {% for article in blog.articles offset: 1 %}
      <article class="article-card">
        <a href="{{ article.url }}" class="article-image">
          {% if article.image %}
            <img src="{{ article.image | img_url: '600x' }}" alt="{{ article.title }}" loading="lazy">
          {% else %}
            {{ 'lifestyle-1' | placeholder_svg_tag }}
          {% endif %}
        </a>
        <div class="article-content">
          {% if article.tags.size > 0 %}
            <span class="category">{{ article.tags.first }}</span>
          {% endif %}
          <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
          <p>{{ article.excerpt_or_content | strip_html | truncate: 120 }}</p>
          <div class="article-meta">
            <span>{{ article.published_at | date: '%b %d, %Y' }}</span>
          </div>
        </div>
      </article>
    {% endfor %}
  </div>

  {% if paginate.pages > 1 %}
    <div class="pagination">
      {{ paginate | default_pagination }}
    </div>
  {% endif %}
</div>

<style>
  .blog-header {
    text-align: center;
    padding: 4rem 5% 3rem;
    max-width: 800px;
    margin: 0 auto;
  }
  .blog-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  .featured-article {
    max-width: var(--page-width);
    margin: 0 auto 4rem;
    padding: 0 5%;
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 3rem;
    align-items: center;
  }
  .featured-image {
    display: block;
    border-radius: 16px;
    overflow: hidden;
  }
  .featured-image img {
    width: 100%;
    transition: transform 0.4s;
  }
  .featured-image:hover img {
    transform: scale(1.05);
  }
  .featured-content h2 {
    font-size: 2.5rem;
    margin: 1rem 0;
  }
  .featured-content h2 a {
    color: inherit;
    text-decoration: none;
  }
  .category {
    display: inline-block;
    padding: 0.4rem 1rem;
    background: var(--orange);
    color: white;
    border-radius: 20px;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .articles-grid {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 5%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2.5rem;
  }
  .article-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s;
  }
  .article-card:hover {
    transform: translateY(-5px);
  }
  .article-image {
    display: block;
    aspect-ratio: 16/10;
    overflow: hidden;
  }
  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s;
  }
  .article-card:hover .article-image img {
    transform: scale(1.1);
  }
  .article-content {
    padding: 1.5rem;
  }
  .article-content h3 {
    font-size: 1.4rem;
    margin: 0.75rem 0;
  }
  .article-content h3 a {
    color: inherit;
    text-decoration: none;
  }
  .article-meta {
    color: #999;
    font-size: 0.9rem;
    margin-top: 1rem;
  }
  @media (max-width: 900px) {
    .featured-article {
      grid-template-columns: 1fr;
    }
    .articles-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
