{% section 'header' %}

<div class="page-header" style="background-color: {{ settings.color_secondary }}; padding: 4rem 0; text-align: center; color: white;">
    <h1 style="margin: 0; font-size: 3rem;">{{ collection.title }}</h1>
    {% if collection.description != blank %}
        <p style="margin-top: 1rem; opacity: 0.9;">{{ collection.description }}</p>
    {% endif %}
</div>

<div class="container" style="margin-top: 4rem; margin-bottom: 4rem;">
    <!-- Filters / Sorting (Simplified) -->
    <div class="collection-controls flex-between" style="margin-bottom: 2rem; padding-bottom: 1rem; border-bottom: 1px solid #eee;">
        <div class="filter-group">
            <span style="font-weight: 600; font-size: 0.9rem; text-transform: uppercase;">Filter By</span>
            <div style="margin-top: 5px;">
                <label style="margin-right: 15px;"><input type="checkbox"> Availability</label>
                <label><input type="checkbox"> Price</label>
            </div>
        </div>
        <div class="sort-group">
            <select style="padding: 0.5rem; border-radius: 4px; border: 1px solid #ddd;">
                <option>Best Selling</option>
                <option>Price: Low to High</option>
                <option>Price: High to Low</option>
                <option>Newest</option>
            </select>
        </div>
    </div>

    <!-- The Product Grid -->
    <div class="product-grid-container" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 3rem;">
        {% for product in collection.products %}
            {% render 'product-card', product: product %}
        {% else %}
            <p style="text-align: center; grid-column: 1/-1;">No products found in this collection.</p>
        {% endfor %}
    </div>

    <!-- Pagination -->
    {% if paginate.pages > 1 %}
        <div class="pagination" style="text-align: center; margin-top: 4rem;">
            {{ paginate | default_pagination }}
        </div>
    {% endif %}
</div>

{% section 'footer' %}
{% render 'cursor-effect' %}
