<div class="custom-cursor" id="custom-cursor"></div>

<style>
  body {
    cursor: none; /* Hide default cursor */
  }
  
  /* The small dot cursor */
  .custom-cursor {
    position: fixed;
    top: 0;
    left: 0;
    width: 20px;
    height: 20px;
    background: transparent;
    border: 2px solid var(--c-accent); /* Hollow ring style */
    border-radius: 50%;
    pointer-events: none;
    z-index: 9999;
    transform: translate(-50%, -50%);
    transition: transform 0.1s ease, width 0.2s, height 0.2s, background 0.2s;
    mix-blend-mode: difference;
  }
  
  /* Hover state */
  body.hovering .custom-cursor {
    width: 40px;
    height: 40px;
    background: rgba(211, 94, 53, 0.2);
    border-color: transparent;
  }

  /* Ensure cursor is visible on all backgrounds */
  @media (pointer: coarse) {
    body { cursor: auto; }
    .custom-cursor { display: none; }
  }
</style>

<script>
  const cursor = document.getElementById('custom-cursor');
  
  document.addEventListener('mousemove', (e) => {
    cursor.style.left = e.clientX + 'px';
    cursor.style.top = e.clientY + 'px';
  });

  // Add hover effect for clickable elements
  const clickables = document.querySelectorAll('a, button, input, select, textarea');
  clickables.forEach(el => {
    el.addEventListener('mouseenter', () => document.body.classList.add('hovering'));
    el.addEventListener('mouseleave', () => document.body.classList.remove('hovering'));
  });
</script>
