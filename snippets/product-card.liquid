<div class="product-card">
  <div class="product-media">
    {% if product.tags contains 'bestseller' %}
      <span class="badge bestseller">Best Seller</span>
    {% elsif product.tags contains 'new' %}
      <span class="badge new">New Batch</span>
    {% endif %}
    
    <a href="{{ product.url }}">
      <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}" loading="lazy">
    </a>
  </div>
  
  <div class="product-info">
    <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
    <div class="flex-between">
      <span class="product-price">{{ product.price | money }}</span>
      {% form 'product', product %}
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <button type="submit" class="btn-secondary" style="padding: 0.4rem 1rem; font-size: 0.8rem;">
          Add
        </button>
      {% endform %}
    </div>
  </div>
</div>
