{% schema %}
{
  "name": "Hermann Premium Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Freshly Cooked Cosmetics"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Handcrafted luxury from Cyprus."
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#996E6A"
    },
    {
      "type": "image_picker",
      "id": "hero_texture",
      "label": "Hero Texture Image"
    }
  ],
  "presets": [
    {
      "name": "Hermann Premium Hero"
    }
  ]
}
{% endschema %}

<div class="hermann-ui-wrapper">
    <!-- Hero Section -->
    <header class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">
                {{ section.settings.heading }}
            </h1>
            <p class="hero-subtitle">{{ section.settings.subheading }}</p>
            <a href="#shop" class="cta-button">Discover the Menu</a>
        </div>
        <div class="hero-image-container">
           {% if section.settings.hero_texture %}
              <img src="{{ section.settings.hero_texture | img_url: 'master' }}" alt="Texture" style="width:100%; height:100%; object-fit:cover; opacity: 0.15; mix-blend-mode: multiply;">
           {% else %}
               <!-- Fallback if no image uploaded -->
               <div style="width:100%; height:100%; background: #996E6A; opacity: 0.1;"></div>
           {% endif %}
        </div>
        <div class="hero-abstract-shape"></div>
    </header>

    <!-- Marquee -->
    <section class="ticker-wrap">
        <div class="ticker">
            <div class="ticker__item">PETA Approved</div>
            <div class="ticker__item">Handcrafted in Cyprus</div>
            <div class="ticker__item">Natural Ingredients</div>
            <div class="ticker__item">Freshly Cooked</div> 
             <div class="ticker__item">PETA Approved</div>
            <div class="ticker__item">Handcrafted in Cyprus</div>
            <div class="ticker__item">Natural Ingredients</div>
            <div class="ticker__item">Freshly Cooked</div> 
        </div>
    </section>
</div>

<style>
/* Scoped Styles for Shopify */
.hermann-ui-wrapper {
    position: relative;
    /* Use variables mapped to settings if needed */
    --color-accent: {{ section.settings.accent_color }};
    --font-heading: 'Source Serif 4', serif;
    --font-body: 'Figtree', sans-serif;
}

/* Import Fonts */
@import url('https://fonts.googleapis.com/css2?family=Figtree:wght@300;400;600&family=Source+Serif+4:ital,opsz,wght@0,8..60,300;0,8..60,400;0,8..60,600;1,8..60,400&display=swap');

/* Simplified CSS from styles.css */
/* COPY PASTE THE REST OF THE CSS HERE, BUT SCOPED IF POSSIBLE. */
/* For brevity in this file prompt, I will assume the user uses the main CSS or I include critical parts. */

.hero-section {
    height: 90vh; /* Adjust for Shopify header */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
    overflow: hidden;
    background: #FFFFFF;
    color: #000;
}

.hero-title {
    font-family: var(--font-heading);
    font-size: 3.5rem;
    z-index: 2;
    line-height: 1.1;
}

.hero-subtitle {
    font-family: var(--font-body);
    font-size: 1.1rem;
    margin-top: 1rem;
    margin-bottom: 2rem;
    z-index: 2;
    opacity: 0.8;
}

.cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background-color: var(--color-accent);
    color: white;
    text-decoration: none;
    border-radius: 50px;
    z-index: 2;
    transition: 0.3s;
}

.hero-image-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-abstract-shape {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40vw;
    height: 40vw;
    background: radial-gradient(circle, rgba(153, 110, 106, 0.4) 0%, rgba(255,255,255,0) 70%);
    z-index: 1;
    border-radius: 50%;
    filter: blur(40px);
    pointer-events: none;
    animation: pulse 8s ease-in-out infinite;
}

/* Marquee */
.ticker-wrap {
    width: 100%;
    overflow: hidden;
    background-color: #242424;
    color: white;
    padding: 1rem 0;
}
.ticker {
    display: flex;
    white-space: nowrap;
    animation: ticker 30s linear infinite;
}
.ticker__item {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    padding: 0 2rem;
}
@keyframes ticker {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
}
@keyframes pulse {
    0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.6; }
    50% { transform: translate(-50%, -50%) scale(1.1); opacity: 0.8; }
}
</style>

