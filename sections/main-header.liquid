{% comment %}
  Hermann Magical Header - Premium Pop-up Interaction
{% endcomment %}

<header class="site-header" style="background-color: {{ section.settings.bg_color }}; position: sticky; top: 0; z-index: 1000;">
  
  <!-- MAIN HEADER BAR -->
  <div class="header-bar container">
    
    <!-- LEFT: The Magic Menu Trigger -->
    <div class="header-left">
        <button class="magic-menu-trigger" aria-label="Open Menu">
            <span class="menu-label">MENU</span>
            <div class="hamburger-icon">
                <span></span><span></span><span></span>
            </div>
        </button>
    </div>

    <!-- CENTER: Logo -->
    <div class="header-center logo-wrapper">
      <a href="{{ routes.root_url }}">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | img_url: '400x' }}" alt="{{ shop.name }}" class="logo-img">
        {% else %}
          <span class="logo-text">{{ section.settings.logo_text }}</span>
        {% endif %}
      </a>
    </div>

    <!-- RIGHT: Icons -->
    <div class="header-right icons-wrapper">
      <button class="icon-btn search-trigger"><i class="fa-solid fa-magnifying-glass"></i></button>
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="icon-btn"><i class="fa-regular fa-user"></i></a>
      {% endif %}
      <a href="{{ routes.cart_url }}" class="icon-btn cart-btn">
        <i class="fa-solid fa-basket-shopping"></i>
        <span class="cart-count">{{ cart.item_count }}</span>
      </a>
    </div>
  </div>

  <!-- THE MAGICAL POP-UP OVERLAY -->
  <div class="magic-menu-overlay">
      <button class="close-magic-menu">✕</button>
      
      <div class="magic-content container">
          <div class="magic-grid">
              <!-- Left Column: Navigation with Icons -->
              <div class="nav-column">
                  <h3 class="menu-heading">Shop by Category</h3>
                  <ul class="magic-nav-list">
                    {% for link in linklists[section.settings.menu].links %}
                        {% assign icon_class = "fa-solid fa-star" %}
                        {% assign handle = link.title | downcase %}
                        {% if handle contains 'cream' %}{% assign icon_class = "fa-solid fa-pump-soap" %}
                        {% elsif handle contains 'scrub' %}{% assign icon_class = "fa-solid fa-hands-bubbles" %}
                        {% elsif handle contains 'soap' %}{% assign icon_class = "fa-solid fa-soap" %}
                        {% elsif handle contains 'candle' %}{% assign icon_class = "fa-solid fa-fire" %}
                        {% elsif handle contains 'gift' %}{% assign icon_class = "fa-solid fa-gift" %}
                        {% elsif handle contains 'perfume' %}{% assign icon_class = "fa-solid fa-spray-can-sparkles" %}
                        {% endif %}

                        <li class="magic-item">
                            <a href="{{ link.url }}" class="magic-link">
                                <span class="magic-icon"><i class="{{ icon_class }}"></i></span>
                                <span class="magic-text">{{ link.title }}</span>
                            </a>
                        </li>
                    {% endfor %}
                  </ul>
              </div>

              <!-- Right Column: Featured (or Image) -->
              <div class="feature-column desktop-only">
                  <div class="menu-image-card">
                     {% if section.settings.menu_image %}
                        <img src="{{ section.settings.menu_image | img_url: '600x' }}" alt="Featured">
                     {% else %}
                        <div class="placeholder-art">HERMANN</div>
                     {% endif %}
                     <div class="menu-caption">
                         <p>Freshly Cooked Skincare</p>
                         <a href="/collections/all" class="btn-text">Shop All →</a>
                     </div>
                  </div>
              </div>
          </div>
      </div>
  </div>

  <!-- Search Overlay (Separate) -->
  <div class="search-modal">
      <div class="container">
          <form action="{{ routes.search_url }}" method="get">
              <input type="text" name="q" placeholder="Type to search..." autofocus>
              <button type="submit">Search</button>
          </form>
          <button class="close-search">✕</button>
      </div>
  </div>

</header>

<style>
/* --- HEADER BAR STYLES --- */
.site-header { font-family: var(--font-body); border-bottom: 1px solid rgba(0,0,0,0.05); background: white; }
.header-bar { display: flex; justify-content: space-between; align-items: center; padding: 1rem 0; height: 90px; }

.header-left, .header-right { flex: 1; }
.header-center { flex: 2; text-align: center; }
.header-right { display: flex; justify-content: flex-end; gap: 1.5rem; }

/* Trigger Button */
.magic-menu-trigger {
    background: none; border: none; cursor: pointer;
    display: flex; align-items: center; gap: 10px;
    font-family: var(--font-heading); font-size: 1rem; color: var(--c-text);
    transition: color 0.3s;
}
.magic-menu-trigger:hover { color: var(--c-accent); }
.hamburger-icon span { display: block; width: 20px; height: 2px; background: currentColor; margin: 4px 0; transition: 0.3s; }
.magic-menu-trigger:hover .hamburger-icon span:nth-child(2) { width: 15px; } /* Little animation */

/* Logo */
.logo-img { max-height: 60px; width: auto; }
.logo-text { font-family: var(--font-heading); font-size: 2rem; }

/* Icons */
.icon-btn { background: none; border: none; font-size: 1.2rem; color: var(--c-text); cursor: pointer; position: relative; }
.icon-btn:hover { color: var(--c-accent); transform: scale(1.1); transition: 0.2s; }
.cart-count { 
    position: absolute; top: -5px; right: -8px; background: var(--c-accent); color: white;
    font-size: 0.7rem; width: 16px; height: 16px; border-radius: 50%;
    display: flex; justify-content: center; align-items: center;
}

/* --- THE MAGICAL OVERLAY --- */
.magic-menu-overlay {
    position: fixed; top: 0; left: 0; width: 100%; height: 100vh;
    background: rgba(255,255,255,0.98); 
    z-index: 2000;
    opacity: 0; visibility: hidden;
    transition: opacity 0.4s ease, visibility 0.4s;
    overflow-y: auto;
}
.magic-menu-overlay.active { opacity: 1; visibility: visible; }

.close-magic-menu {
    position: absolute; top: 2rem; right: 2rem;
    font-size: 2rem; background: none; border: none; cursor: pointer; color: var(--c-text);
    transition: transform 0.3s;
}
.close-magic-menu:hover { transform: rotate(90deg) scale(1.1); color: var(--c-accent); }

.magic-content { padding-top: 8rem; padding-bottom: 4rem; }
.magic-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: start; }

.menu-heading { font-family: var(--font-heading); font-size: 1rem; color: var(--c-taupe); letter-spacing: 2px; text-transform: uppercase; margin-bottom: 2rem; border-bottom: 1px solid #eee; padding-bottom: 1rem; display: inline-block; }

.magic-nav-list { list-style: none; padding: 0; }
.magic-item { margin-bottom: 1rem; opacity: 0; transform: translateY(20px); transition: 0.4s ease; }
/* Staggered Animation Logic in JS */

.magic-link {
    display: flex; align-items: center; gap: 1.5rem;
    text-decoration: none; color: var(--c-text);
    font-family: var(--font-heading); font-size: 2rem;
    transition: transform 0.3s;
    padding: 0.5rem 0;
}
.magic-link:hover { transform: translateX(20px); color: var(--c-accent); }
.magic-icon { font-size: 1.5rem; opacity: 0.5; width: 30px; text-align: center; }
.magic-link:hover .magic-icon { opacity: 1; color: var(--c-accent); }

/* Feature Column */
.menu-image-card { position: relative; border-radius: 8px; overflow: hidden; height: 400px; }
.menu-image-card img { width: 100%; height: 100%; object-fit: cover; }
.placeholder-art { width: 100%; height: 100%; background: #f4f4f4; display: flex; align-items: center; justify-content: center; font-size: 3rem; color: #ddd; }
.menu-caption {
    position: absolute; bottom: 2rem; left: 2rem; 
    background: white; padding: 1.5rem; border-radius: 4px;
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
}

/* Search Modal */
.search-modal {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(255,255,255,0.95); z-index: 2500;
    display: flex; align-items: center; justify-content: center;
    opacity: 0; visibility: hidden; transition: 0.3s;
}
.search-modal.active { opacity: 1; visibility: visible; }
.search-modal input {
    width: 100%; border: none; border-bottom: 2px solid var(--c-text); 
    font-size: 3rem; font-family: var(--font-heading); background: transparent; outline: none;
}
.close-search { position: absolute; top: 2rem; right: 2rem; font-size: 2rem; background: none; border: none; cursor: pointer; }

/* Responsive */
@media (max-width: 900px) {
    .magic-grid { grid-template-columns: 1fr; }
    .feature-column { display: none; }
    .magic-link { font-size: 1.5rem; }
    .menu-label { display: none; }
}
</style>

<script>
  // Menu Trigger
  const menuTrigger = document.querySelector('.magic-menu-trigger');
  const magicOverlay = document.querySelector('.magic-menu-overlay');
  const closeMagic = document.querySelector('.close-magic-menu');
  const magicItems = document.querySelectorAll('.magic-item');

  function openMenu() {
      magicOverlay.classList.add('active');
      // Staggered Animation
      magicItems.forEach((item, index) => {
          setTimeout(() => {
              item.style.opacity = '1';
              item.style.transform = 'translateY(0)';
          }, index * 50 + 100);
      });
  }
  
  function closeMenuFunc() {
       magicOverlay.classList.remove('active');
       magicItems.forEach(item => {
           item.style.opacity = '0';
           item.style.transform = 'translateY(20px)';
       });
  }

  if(menuTrigger) {
      menuTrigger.addEventListener('click', openMenu);
      closeMagic.addEventListener('click', closeMenuFunc);
  }

  // Search Trigger
  const searchBtn = document.querySelector('.search-trigger');
  const searchModal = document.querySelector('.search-modal');
  const closeSearchBtn = document.querySelector('.close-search');

  if(searchBtn) {
      searchBtn.addEventListener('click', () => {
          searchModal.classList.add('active');
          searchModal.querySelector('input').focus();
      });
      closeSearchBtn.addEventListener('click', () => searchModal.classList.remove('active'));
  }
</script>

{% schema %}
{
  "name": "Magical Header",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background", "default": "#ffffff" },
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "HERMANN" },
    { "type": "link_list", "id": "menu", "label": "Menu", "default": "main-menu" },
    { "type": "image_picker", "id": "menu_image", "label": "Menu Featured Image" }
  ]
}
{% endschema %}
