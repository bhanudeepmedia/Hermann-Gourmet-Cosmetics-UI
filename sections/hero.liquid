<section class="hero">
  <div class="container">
    <div class="hero__content">
      {% if section.settings.eyebrow_text != blank %}
        <span class="hero__eyebrow">{{ section.settings.eyebrow_text }}</span>
      {% endif %}
      
      {% if section.settings.title != blank %}
        <h1 class="hero__title">{{ section.settings.title }}</h1>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <p class="hero__description">{{ section.settings.description }}</p>
      {% endif %}
      
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="btn btn--primary">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
  
  {% if section.settings.image %}
    <div class="hero__image">
      <img src="{{ section.settings.image | img_url: '1600x' }}" alt="{{ section.settings.title }}">
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow text",
      "default": "Since 2014 â€¢ Cyprus"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Heading",
      "default": "Skincare so fresh, you could eat it."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Handmade in Cyprus using grandmother's secret recipes and the finest organic botanicals."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Explore The Menu"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
