<div class="featured-collection-section">
  <div class="container">
    <div class="section-header-split">
      <div>
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.subheading }}</p>
      </div>
      {% if section.settings.button_text %}
        <a href="{{ section.settings.button_link }}" class="btn-primary">
          {{ section.settings.button_text }} â†’
        </a>
      {% endif %}
    </div>

    {% if section.settings.collection %}
      <div class="collection-grid">
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          <div class="collection-card">
            <a href="{{ product.url }}" class="card-image">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}" loading="lazy">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag }}
              {% endif %}
              
              {% if product.tags contains 'bestseller' %}
                <span class="tag-bestseller">âœ¨ Best Seller</span>
              {% elsif product.tags contains 'new' %}
                <span class="tag-new">ðŸŒ¿ New</span>
              {% endif %}
            </a>
            <div class="card-content">
              <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
              <p>{{ product.description | strip_html | truncate: 60 }}</p>
              <div class="card-footer">
                <span class="price">{{ product.price | money }}</span>
                <button class="quick-view-btn" data-product-id="{{ product.id }}">
                  Quick View
                </button>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .featured-collection-section {
    padding: 6rem 5%;
    background: white;
  }
  .section-header-split {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 4rem;
  }
  .section-header-split h2 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }
  .section-header-split p {
    font-size: 1.1rem;
    color: #666;
  }
  .collection-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2.5rem;
  }
  .collection-card {
    background: #FDFBF7;
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
  }
  .collection-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.1);
  }
  .card-image {
    display: block;
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
  }
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
  }
  .collection-card:hover .card-image img {
    transform: scale(1.1);
  }
  .card-content {
    padding: 1.5rem;
  }
  .card-content h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
  }
  .card-content h3 a {
    color: inherit;
    text-decoration: none;
  }
  .card-content p {
    color: #666;
    font-size: 0.95rem;
    margin-bottom: 1rem;
  }
  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .quick-view-btn {
    background: var(--color-accent);
    color: white;
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: 20px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s;
  }
  .quick-view-btn:hover {
    transform: scale(1.05);
  }
  @media (max-width: 768px) {
    .section-header-split {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bestsellers"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our most-loved products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View All"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
