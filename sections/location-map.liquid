<div class="location-section">
  <div class="container split-layout">
    <div class="location-details">
        <span class="eyebrow">Visit Us</span>
        <h2>Our Shop of Wonders</h2>
        <p class="address">
           <strong>Hermann Gourmet Cosmetics</strong><br>
           Mnasiadou 11H<br>
           Nicosia 1065, Cyprus
        </p>
        <div class="hours">
           <h4>Opening Hours</h4>
           <p>Mon - Fri: 10am - 7pm</p>
           <p>Sat: 10am - 3pm</p>
           <p>Sun: Closed (Cooking fresh batches!)</p>
        </div>
        <div class="contact-actions">
           <a href="tel:+35722345678" class="btn-primary">Call Us</a>
           <a href="https://maps.google.com" target="_blank" class="btn-text">Get Directions â†’</a>
        </div>
    </div>
    <div class="location-map">
        <!-- Placeholder for Map, user can replace with Embed -->
        {% if section.settings.map_image %}
           <img src="{{ section.settings.map_image | img_url: '800x' }}" alt="Map">
        {% else %}
           <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3264.444288057262!2d33.36012307630732!3d35.16666997275817!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14de1767ca494d55%3A0x5b5ea4a61365140!2sNicosia%2C%20Cyprus!5e0!3m2!1sen!2s!4v1700000000000!5m2!1sen!2s" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        {% endif %}
    </div>
  </div>
</div>

<style>
.location-section { background: #F8F5F2; padding: 4rem 0; }
.split-layout { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center; }

.location-details { padding: 2rem; }
.eyebrow { text-transform: uppercase; letter-spacing: 2px; font-size: 0.8rem; color: var(--c-accent); font-weight: 700; margin-bottom: 1rem; display: block; }
.location-details h2 { font-size: 2.5rem; margin-bottom: 1.5rem; }
.address { font-size: 1.1rem; line-height: 1.8; margin-bottom: 2rem; }
.hours h4 { text-transform: uppercase; font-size: 0.9rem; margin-bottom: 0.5rem; }
.hours p { margin: 0; color: #555; }
.contact-actions { margin-top: 2rem; display: flex; gap: 1rem; align-items: center; }

.location-map { height: 400px; border-radius: 12px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.05); }
.location-map img { width: 100%; height: 100%; object-fit: cover; }

@media(max-width: 900px) {
    .split-layout { grid-template-columns: 1fr; }
    .location-map { height: 300px; }
}
</style>

{% schema %}
{
  "name": "Location Map",
  "settings": [
    { "type": "image_picker", "id": "map_image", "label": "Custom Map Image (Optional)" }
  ],
  "presets": [{ "name": "Store Location" }]
}
{% endschema %}
