<header class="header">
  <div class="container">
    <div class="header__inner">
      
      <!-- Logo -->
      <div class="header__logo">
        <a href="/">
          {% if section.settings.logo %}
            <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" style="max-height: 50px;">
          {% else %}
            HERMANN
          {% endif %}
        </a>
      </div>

      <!-- Navigation -->
      <nav class="header__nav hide-mobile">
        {% for link in linklists.main-menu.links %}
          <a href="{{ link.url }}" class="header__nav-link">
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>

      <!-- Icons -->
      <div class="header__icons">
        <a href="/search" class="header__icon">
          <i class="fa-solid fa-magnifying-glass"></i>
        </a>
        <a href="/account" class="header__icon hide-mobile">
          <i class="fa-regular fa-user"></i>
        </a>
        <a href="/cart" class="header__icon">
          <i class="fa-solid fa-bag-shopping"></i>
          <span class="header__cart-count">({{ cart.item_count }})</span>
        </a>
      </div>

    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    }
  ]
}
{% endschema %}
