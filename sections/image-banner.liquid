<div class="image-banner-section">
  <div class="banner-container">
    <div class="banner-image">
      {% if section.settings.image %}
        <img src="{{ section.settings.image | img_url: '1400x' }}" alt="{{ section.settings.heading }}">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="banner-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>
      {% if section.settings.button_text %}
        <a href="{{ section.settings.button_link }}" class="btn-primary">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .image-banner-section {
    padding: 0;
    margin: 4rem 0;
  }
  .banner-container {
    position: relative;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 5%;
    border-radius: 24px;
    overflow: hidden;
    min-height: 500px;
    display: flex;
    align-items: center;
  }
  .banner-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  .banner-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .banner-image::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 100%);
  }
  .banner-content {
    position: relative;
    z-index: 1;
    color: white;
    max-width: 600px;
    padding: 4rem;
  }
  .banner-content h2 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }
  .banner-content p {
    font-size: 1.3rem;
    margin-bottom: 2rem;
    line-height: 1.6;
  }
  @media (max-width: 768px) {
    .banner-container {
      min-height: 400px;
    }
    .banner-content {
      padding: 2rem;
    }
    .banner-content h2 {
      font-size: 2rem;
    }
    .banner-content p {
      font-size: 1.1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover Our Story"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Handcrafted in Cyprus using grandmother's secret recipes and the finest organic botanicals."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Image Banner"
    }
  ]
}
{% endschema %}
